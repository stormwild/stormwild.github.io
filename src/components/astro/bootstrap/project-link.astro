---
interface Props {
  href: string
  title: string
  description: string
  isActive: Boolean | string
}

const { href, title, description, isActive } = Astro.props

const active = isActive === true || isActive === 'true'
---

<a
  href={href}
  target='_blank'
  class={`list-group-item list-group-item-action ${active ? 'bg-primary-subtle' : 'bg-dark-subtle'} py-3 lh-sm border-bottom-1 border-light-subtle`}
  aria-current={active ? 'true' : 'false'}
>
  <div class='d-flex w-100 align-items-center justify-content-between'>
    <strong class='mb-1'>{title}</strong>
    {active ? <small>&checkmark;</small> : <small>&excl;</small>}
  </div>
  <div class='col-10 mb-1 small'>
    {description}
  </div>
</a>
