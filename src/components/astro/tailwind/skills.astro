---
import { Image } from 'astro:assets'
import { getCollection } from 'astro:content'

const skills = await getCollection('skills')

skills.sort((a, b) => a.data.order - b.data.order)
---

<div class='container mx-auto px-4 mb-12'>
  <div class='grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6'>
    {
      skills.map((skill) => (
        <div class='bg-gray-800 rounded-lg shadow-lg overflow-hidden border border-gray-700 hover:border-gray-600 transition-colors duration-300'>
          <div class='p-6 flex flex-col items-center text-center'>
            <div class='mb-4 p-4 bg-gray-700 rounded-full inline-block'>
              <Image
                src={skill.data.logo}
                alt={skill.data.skill}
                class='w-16 h-16 object-contain'
                loading='eager'
              />
            </div>

            <h4 class='text-xl font-bold text-white mb-2'>
              {skill.data.skill}
            </h4>

            <div class='w-full border-t border-gray-700 my-4' />

            <ul class='w-full space-y-3 text-sm'>
              <li class='flex justify-between items-center text-gray-300'>
                <span>Proficiency:</span>
                <span class='bg-blue-900 text-blue-200 px-2 py-1 rounded-full text-xs font-semibold'>
                  {skill.data.proficiency}/10
                </span>
              </li>
              <li class='text-gray-400'>{skill.data.label}</li>
            </ul>
          </div>
        </div>
      ))
    }
  </div>
</div>
